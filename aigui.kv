<AiFace>
    BoxLayout:
        size: root.size
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Previous answer: "
            Label:
                id: label_received_answer
                text: ""
        Label:
            id: label1
            text: root.label_text
        TextInput:
            id: text_input_1
            text: ""
        Button:
            id: button1
            text: "Send\nNudes"
            on_press:
                label_received_answer.text = text_input_1.text
                root.send_answer()
                text_input_1.text = ""